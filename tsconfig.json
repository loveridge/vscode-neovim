{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2015",
		"outDir": "out",
		"lib": [
			"ES2015",
			"ES2019.Array"
		],
		"sourceMap": true,
		"rootDir": "src",
		"types": ["node", "mocha"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true   	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"test_fixtures"
	],
	"include": ["src/**/*"]
}
